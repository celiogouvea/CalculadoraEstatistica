<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/tvValor"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="13dp"
        android:id="@+id/etCadastro"
        android:hint="@string/etnumeros" />

    <Button
        android:text="@string/btcadastrovalores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btTelaCadSalvar"
        android:layout_below="@+id/etCadastro"
        android:layout_centerHorizontal="true"
        android:onClick="salvar" />

    <TextView
        android:text="@string/tvnumeros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/tvValor"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etCadastro" />

</RelativeLayout>