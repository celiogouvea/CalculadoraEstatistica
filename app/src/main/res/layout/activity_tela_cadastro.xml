<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_below="@+id/tvValor"
        android:layout_marginStart="45dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="@string/etnumeros"
        android:inputType="numberSigned|numberDecimal"/>

    <TextView
        android:id="@+id/tvValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etCadastro"
        android:layout_marginTop="70dp"
        android:text="@string/tvnumeros" />

    <ImageButton
        android:id="@+id/btTelaCadSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCadastro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:onClick="salvar"
        app:srcCompat="@drawable/btsalvar"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/ibRol"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginTop="61dp"
        android:onClick="trocarTelaLista"
        app:srcCompat="@drawable/rol"
        tools:ignore="ContentDescription,PxUsage"
        android:layout_below="@+id/btTelaCadSalvar"
        android:layout_toEndOf="@+id/tvValor" />

    <Button
        android:id="@+id/btTabela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btTelaCadSalvar"
        android:layout_alignTop="@+id/ibRol"
        android:layout_marginStart="68dp"
        android:layout_marginTop="11dp"
        android:onClick="trocarTelaTabela"
        android:text="Tabela"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etQtd"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btTelaCadSalvar"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/etCadastro"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        tools:ignore="HardcodedText,LabelFor,RtlHardcoded" />

    <TextView
        android:id="@+id/qtdElemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etCadastro"
        android:layout_toEndOf="@+id/etCadastro"
        android:text="Quantidade de Elementos"
        android:gravity="center"
        tools:ignore="HardcodedText" />

</RelativeLayout>